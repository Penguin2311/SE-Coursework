extends layout.pug

block head
  link(rel="stylesheet", href="/tables.css")

block content
  h2 All the cities in the world from largest population to smallest
  table
    thead
      th Name
      th Country
      th District
      th Population
    tbody
      each row, i in rows
        tr
          td.fit #{row.Name}
          td.fit #{row.Country}
          td.fit #{row.District}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}

extends layout.pug

block head
  link(rel="stylesheet", href="/tables.css")

block content
  h2 All Countries in the world from largest population to smallest
  table
    thead
      th Code
      th Name
      th Continent
      th Region
      th Population
      th Capital
    tbody
      each row, i in rows
          tr
            td.fit #{row.CountryCode}
            td.fit #{row.Name}
            td.fit #{row.Continent}
            td.fit #{row.Region}
            - const population = new Intl.NumberFormat().format(row.Population);
            td.fit.number #{population}
            td.fit #{row.Capital}
